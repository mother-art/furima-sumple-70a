= render 'users/header'
.crad-registration
  .regi-main
    .regi-main__header
      %h2 クレジットカード情報入力
    .regi-main__form
      = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
        .form-group
          %label.title カード番号
          %span.required 必須
          %br
          %ul.card-image
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763',height:"20",width:"49", alt:"visa"
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763" ,height:"20",width:"34", alt:"master-card"
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2482339763" ,height:"20",width:"30", alt:"saison-card"
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2482339763",height:"20",width:"32", alt:"jcb"
            %li
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2482339763",height:"20",width:"21", alt:"american_express"
            %li
              = image_tag  "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2482339763" ,height:"20",width:"32", alt:"dinersclub"
            %li
              = image_tag  "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2482339763" ,height:"20",width:"32", alt:"discover"
          = text_field_tag "number", "", class: "input-default", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        .form-group
          %label.title 有効期限
          %span.required 必須
          %br
          = select_tag('exp_month',options_for_select(1..12),include_blank: '--')
          %span 月
          = select_tag('exp_year',options_for_select(2019..2030 ),include_blank: '--')
          %span 年
        .form-group
          %label.title セキュリティコード
          %span.required 必須
          %br
          = text_field_tag "cvc", "", class: "input-default", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        .form-group
          #card_token
          = submit_tag "追加する", id: "token_submit", class: 'card-btn'
        
        .form-group
          = link_to "トップページに戻る", root_path, class:  'back-link'